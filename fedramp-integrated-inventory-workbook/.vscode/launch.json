    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Tests in Current File",
            "type": "python",
            "request": "launch",
            "console": "integratedTerminal",
            "module": "pytest",
            "cwd": "${workspaceFolder}/src",
            "args": [
                "-v",
                "-s",
                "${file}"
            ]
        },
        {
            "name": "Run All Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "cwd": "${workspaceFolder}/src",
            "args": [
                "-v",
                "-s",
                "../tests"
            ]
        },
        {
            "name": "Debug Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "redirectOutput": true
        }
    ]
}